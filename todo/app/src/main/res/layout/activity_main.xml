<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="@color/Cultured"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/redo_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/standard_height"
        android:layout_marginTop="@dimen/component_padding"
        android:layout_marginEnd="@dimen/component_padding"
        android:background="@drawable/button_state_color"
        android:text="Redo"
        android:textColor="@color/DavysGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/undo_button"
        style="@android:style/Widget.Material.Light.Button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/standard_height"
        android:layout_marginTop="@dimen/component_padding"
        android:layout_marginEnd="@dimen/component_padding"
        android:background="@drawable/button_state_color"
        android:text="Undo"
        android:textColor="@color/DavysGrey"
        app:layout_constraintEnd_toStartOf="@+id/redo_button"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/component_padding"
        android:layout_marginBottom="@dimen/component_padding"
        android:backgroundTint="@color/LightGray"
        android:text="Add"
        android:textColor="@color/DavysGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/scheduled_button"
        android:layout_width="@dimen/standard_height"
        android:layout_height="@dimen/standard_height"
        android:layout_marginStart="@dimen/component_padding"
        android:text="APPOINT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/shopping_button"
        android:layout_width="@dimen/standard_height"
        android:layout_height="@dimen/standard_height"
        android:layout_marginStart="@dimen/component_padding"
        android:text="SHOP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/scheduled_button" />

    <Button
        android:id="@+id/location_button"
        android:layout_width="@dimen/standard_height"
        android:layout_height="@dimen/standard_height"
        android:layout_marginStart="@dimen/component_padding"
        android:text="LOC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shopping_button" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/component_padding"
        android:layout_marginTop="@dimen/component_padding"
        android:layout_marginEnd="@dimen/component_padding"
        android:layout_marginBottom="@dimen/component_padding"
        app:layout_constraintBottom_toTopOf="@+id/location_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/undo_button">

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/component_padding"
        android:layout_marginEnd="@dimen/component_padding"
        android:layout_marginBottom="@dimen/component_padding"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/add_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/component_padding"
        android:layout_marginEnd="@dimen/component_padding"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/undo_button" />

</androidx.constraintlayout.widget.ConstraintLayout>