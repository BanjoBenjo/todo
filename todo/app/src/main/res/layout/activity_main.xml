<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="@color/Cultured"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/etienne_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/standard_height"
        android:layout_marginStart="@dimen/component_padding"
        android:layout_marginTop="10dp"
        android:text="shopping list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/redo_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/standard_height"
        android:layout_marginTop="@dimen/component_padding"
        android:layout_marginEnd="@dimen/component_padding"
        android:backgroundTint="@color/LightGray"
        android:text="Redo"
        android:textColor="@color/DavysGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/undo_button"
        style="@android:style/Widget.Material.Light.Button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/standard_height"
        android:layout_marginTop="@dimen/component_padding"
        android:layout_marginEnd="@dimen/component_padding"
        android:backgroundTint="@color/LightGray"
        android:text="Undo"
        android:textColor="@color/DavysGrey"
        app:layout_constraintEnd_toStartOf="@+id/redo_button"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/component_padding"
        android:layout_marginEnd="@dimen/component_padding"
        android:layout_marginBottom="@dimen/component_padding"
        android:backgroundTint="@color/DavysGrey"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/DavysGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/add_button"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/component_padding"
        android:layout_marginBottom="@dimen/component_padding"
        android:backgroundTint="@color/LightGray"
        android:text="Add"
        android:textColor="@color/DavysGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/component_padding"
        android:layout_marginEnd="@dimen/component_padding"
        android:layout_marginBottom="@dimen/component_padding"
        android:background="?android:attr/listDivider"
        android:backgroundTint="@color/DavysGrey"
        android:foregroundTint="@color/DavysGrey"
        app:layout_constraintBottom_toTopOf="@+id/editText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/editText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/undo_button">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@color/Cultured" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>