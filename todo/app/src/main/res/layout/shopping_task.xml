<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/nameOfShoppingItem"
        android:layout_width="0dp"
        android:layout_height="@dimen/standard_height"
        android:layout_marginStart="@dimen/component_padding"
        android:layout_marginEnd="@dimen/component_padding"
        android:layout_marginBottom="@dimen/component_padding"
        android:ems="10"
        android:foregroundTint="@color/DavysGrey"
        android:hint="New Item"
        android:inputType="text|textCapSentences"
        android:textColor="@color/DavysGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addShoppingItem"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addShoppingItem"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/standard_height"
        android:layout_marginStart="@dimen/component_padding"
        android:layout_marginEnd="@dimen/component_padding"
        android:layout_marginBottom="@dimen/component_padding"
        android:backgroundTint="@color/LightGray"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/nameOfShoppingItem" />

    <View
        android:id="@+id/divider2"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/component_padding"
        android:layout_marginEnd="@dimen/component_padding"
        android:layout_marginBottom="@dimen/component_padding"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/nameOfShoppingItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/component_padding"
        android:layout_marginTop="@dimen/component_padding"
        android:layout_marginEnd="@dimen/component_padding"
        android:layout_marginBottom="@dimen/component_padding"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/divider2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider">

        <ListView
            android:id="@+id/shoppingListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/component_padding"
        android:layout_marginTop="@dimen/component_padding"
        android:layout_marginEnd="@dimen/component_padding"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shopping_list_name" />

    <EditText
        android:id="@+id/shopping_list_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/standard_height"
        android:layout_marginStart="@dimen/component_padding"
        android:layout_marginTop="@dimen/component_padding"
        android:layout_marginEnd="@dimen/component_padding"
        android:gravity="left|center_vertical"
        android:hint="New Shopping List"
        android:inputType="text|textCapSentences"
        android:textAlignment="textStart"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textColor="@color/DavysGrey"
        app:layout_constraintEnd_toStartOf="@+id/submitButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/component_padding"
        android:layout_marginEnd="@dimen/component_padding"
        android:text="SAVE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>